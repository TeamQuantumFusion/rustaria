[package]
name = "rustaria"
version = "0.1.0"
authors = ["leocth <leocth31@gmail.com>", "alphaqu <yan.gyunashyan@gmail.com>"]
description = "A Terraria rework in Rust"
repository = "https://github.com/rustaria/rustaria/"
license = "GPL-3.0-or-later"
edition = "2021"
rust-version = "1.57"

[dependencies]
mlua = { version = "0.7.1", features = ["lua54", "vendored", "serialize"] }
time = { version = "0.3.5", features = ["macros"] }
zip = "0.5.13"
tracing = "0.1.29"
tracing-futures = "0.2.5"
tracing-error = "0.2.0"
tracing-subscriber = { version = "0.3.7", features = ["env-filter", "time"] }
eyre = "0.6.5"
color-eyre = "0.6.0"
serde = { version = "1.0.133", features = ["derive"] }
serde_json = "1.0.74"
mooncake = { path = "libs/mooncake" }
structopt = "0.3.25"
uuid = { version = "0.8.2", features = ["v4"] }
thiserror = "1.0.30"
laminar = "0.5.0"
crossbeam = "0.8.1"
bincode = "1.3.3"
lz4 = "1.23.2"

[build-dependencies]
zip = "0.5.0"
walkdir = "2.3.2"

[workspace]
members = ["libs/mooncake", "apps/rsa-client", "apps/rsa-server"]

[profile.release]
panic = "abort"
opt-level = 3
lto = "thin"
